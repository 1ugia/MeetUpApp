<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeScreenFragment">

    <fragment
        android:id="@+id/HomeScreenFragment"
        android:name="com.masgray.findfriends.ui.homeScreen.HomeScreenFragment"
        android:label="@string/home_screen_label"
        tools:layout="@layout/fragment_home_screen">

        <action
            android:id="@+id/action_HomeScreenFragment_to_FindFriendsFragment"
            app:destination="@id/FriendsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/FriendsListFragment"
        android:name="com.masgray.findfriends.ui.friendsList.FriendsListFragment"
        android:label="@string/find_friends_fragment_label">

        <action
            android:id="@+id/action_FriendsListFragment_to_HomeScreenFragment"
            app:destination="@id/HomeScreenFragment" />
    </fragment>
</navigation>